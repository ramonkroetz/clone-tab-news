{
  "name": "clone-tab-news",
  "version": "1.0.0",
  "description": "## NVM Version (.nvmrc) nvm install",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node --no-warnings=ExperimentalWarning --loader ts-node/esm infra/scripts/wait-for-postgres.ts",
    "migrations:create": "node-pg-migrate -m infra/migrations -j sql create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development --language ts up",
    "lint:eslint:check": "next lint --dir .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepare": "husky",
    "typecheck": "tsc",
    "commit": "cz",
    "ci": "npm run lint:eslint:check && npm run lint:prettier:check && npm run typecheck && npm run test"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@types/async-retry": "1.4.9",
    "@types/jest": "30.0.0",
    "@types/node": "22.10.2",
    "@types/pg": "8.11.10",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "chalk": "5.4.1",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.12.2",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.4.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "next": "16.1.6",
    "next-connect": "1.0.0",
    "node-pg-migrate": "8.0.4",
    "pg": "8.13.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "swr": "2.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
