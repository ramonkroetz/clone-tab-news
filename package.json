{
  "name": "clone-tab-news",
  "version": "1.0.0",
  "description": "## NVM Version (.nvmrc) nvm install",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,vitest --hide next -k -s command-vitest \"next dev\" \"vitest run\"",
    "posttest": "npm run services:stop",
    "test:watch": "vitest --watch",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node --no-warnings=ExperimentalWarning --loader ts-node/esm infra/scripts/wait-for-postgres.ts",
    "migrations:create": "node-pg-migrate -m infra/migrations -j sql create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development --language ts up",
    "prepare": "husky",
    "lint": "npm run lint:biome && npm run lint:ts && npm run lint:css",
    "lint:biome": "biome check . && biome lint --error-on-warnings .",
    "lint:css": "stylelint **/*.css",
    "lint:ts": "tsc -p tsconfig.json --noEmit",
    "biome:format": "biome format .",
    "css:format": "stylelint --fix **/*.css",
    "typecheck": "tsc",
    "commit": "npm run lint && cz"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@faker-js/faker": "9.7.0",
    "@types/async-retry": "1.4.9",
    "@types/node": "25.2.2",
    "@types/pg": "8.11.10",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@types/set-cookie-parser": "2.4.10",
    "chalk": "5.4.1",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "prettier": "3.4.2",
    "set-cookie-parser": "2.7.1",
    "stylelint": "17.1.1",
    "stylelint-config-clean-order": "8.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "cookie": "1.0.2",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.3",
    "next": "16.1.6",
    "next-connect": "1.0.0",
    "node-pg-migrate": "8.0.4",
    "pg": "8.13.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "swr": "2.3.0",
    "uuid": "13.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
